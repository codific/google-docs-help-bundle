<div id="helpContentModal" class="modal fade" aria-modal="true" tabindex="-1">
    <div class="modal-xl modal-dialog" style="overflow-y: initial !important;">
        <div class="modal-content">
            <div class="modal-header">
                <div class="ml-2 flex-grow-1">
                    <input id="help-modal-search-input" class="form-control d-inline-block" placeholder="{{ searchPlaceholderText|default('Search...') }}..."/>
                </div>
                <div>
                    <button type="button" class="btn btn-primary search-modal-navigation ml-1" data-control="prev">
                        <i class="fas fa-angle-double-up"></i>
                    </button>
                    <button type="button" class="btn btn-primary search-modal-navigation" data-control="next">
                        <i class="fas fa-angle-double-down"></i>
                    </button>
                </div>
            </div>
            <div class="">
                <ul class="nav nav-tabs nav-tabs-highlight w-100 pl-4 pt-3">
                    {% for index, helpContent in helpContents %}
                        <li class="nav-item">
                            <a href="#content-{{ index }}" class="nav-link {% if loop.first %} active {% endif %}" data-toggle="tab" role="tablist">
                                {{ helpContent['heading'] }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
            <div class="content dropdown-item-modal-body p-5" style="overflow-y: auto; height: 70vh">
                <div class="tab-content">
                    {% for index, helpContent in helpContents %}
                        <div class="tab-pane fade show {% if loop.first %} active {% endif %}" id="content-{{ index }}">
                            {{ helpContent['content']|raw }}
                        </div>
                    {% endfor %}
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-info" data-dismiss="modal">
                    <i class="fa fa-times"></i>
                    {{ closeButtonText|default('Close') }}
                </button>
            </div>
        </div>
    </div>
</div>